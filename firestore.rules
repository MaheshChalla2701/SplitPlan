rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read any user (for search)
      allow read: if isAuthenticated();
      
      // Users can create their own document
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Users can update their own document, OR allow updating only the friends array
      // (needed when accepting friend requests from other users)
      allow update: if isAuthenticated() && (
        isOwner(userId) || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends'])
      );
      
      // Users can delete their own account
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // Friendships collection
    match /friendships/{friendshipId} {
      // Users can read friendships where they are involved
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.friendId == request.auth.uid);
      
      // Users can create friendships where they are the requester
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update friendships where they are involved (for accepting/rejecting)
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.friendId == request.auth.uid);
      
      // Users can delete friendships where they are involved
      allow delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         resource.data.friendId == request.auth.uid);
    }

    // Payment requests collection
    match /payment_requests/{requestId} {
      // Users can read requests where they are involved
      allow read: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      
      // Users can create payment requests
      allow create: if isAuthenticated() && 
        (request.resource.data.fromUserId == request.auth.uid || 
         request.resource.data.toUserId == request.auth.uid);
      
      // Users can update requests where they are involved
      allow update: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      
      // Users can delete their own requests
      allow delete: if isAuthenticated() && 
        resource.data.fromUserId == request.auth.uid;
    }

    // Groups collection
    match /groups/{groupId} {
      // Members can read the group
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.memberIds;
      
      // Authenticated users can create groups
      allow create: if isAuthenticated();
      
      // Admin can update the group
      allow update: if isAuthenticated() && 
        resource.data.adminId == request.auth.uid;
      
      // Admin can delete the group
      allow delete: if isAuthenticated() && 
        resource.data.adminId == request.auth.uid;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Get group to check membership
      function getGroup(groupId) {
        return get(/databases/$(database)/documents/groups/$(groupId));
      }
      
      // Members of the group can read expenses
      allow read: if isAuthenticated() && 
        request.auth.uid in getGroup(resource.data.groupId).data.memberIds;
      
      // Members of the group can create expenses
      allow create: if isAuthenticated() && 
        request.auth.uid in getGroup(request.resource.data.groupId).data.memberIds;
      
      // Creator or admin can update expenses
      allow update: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || 
         getGroup(resource.data.groupId).data.adminId == request.auth.uid);
      
      // Creator or admin can delete expenses
      allow delete: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || 
         getGroup(resource.data.groupId).data.adminId == request.auth.uid);
    }

    // Settlements collection
    match /settlements/{settlementId} {
      // Get group to check membership
      function getGroup(groupId) {
        return get(/databases/$(database)/documents/groups/$(groupId));
      }
      
      // Members of the group can read settlements
      allow read: if isAuthenticated() && 
        request.auth.uid in getGroup(resource.data.groupId).data.memberIds;
      
      // Members involved in the settlement can create it
      allow create: if isAuthenticated() && 
        request.auth.uid in getGroup(request.resource.data.groupId).data.memberIds &&
        (request.resource.data.fromUserId == request.auth.uid || 
         request.resource.data.toUserId == request.auth.uid);
      
      // Settlements are immutable once created
      allow update: if false;
      
      // Admin can delete settlements
      allow delete: if isAuthenticated() && 
        getGroup(resource.data.groupId).data.adminId == request.auth.uid;
    }
  }
}
